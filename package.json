{
  "name": "transl8",
  "displayName": "Transl8",
  "description": "Manage translations directly within your code editor.",
  "version": "1.2.2",
  "engines": {
    "vscode": "^1.103.0"
  },
  "publisher": "lifeordev",
  "icon": "images/icon.png",
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lifeordev/transl8"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:vue",
    "onLanguage:json",
    "onLanguage:jsonc"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lifeordev.transl8.editTranslation",
        "title": "Transl8: Edit Translation"
      }
    ],
    "configuration": {
      "title": "Transl8 Configuration",
      "properties": {
        "lifeordev.transl8.sourceCodePath": {
          "type": "string",
          "default": "src",
          "description": "Specifies the path to all source files",
          "scope": "resource"
        },
        "lifeordev.transl8.translationFilePath": {
          "type": "string",
          "default": "src/locales/source.json",
          "description": "Specifies the file path to the translation file",
          "scope": "resource"
        },
        "lifeordev.transl8.functionNames": {
          "type": "array",
          "default": [
            "t",
            "i18n.t",
            "$t"
          ],
          "description": "Specifies the function names used for translations",
          "items": {
            "type": "string"
          },
          "scope": "resource"
        }
      }
    },
    "problemMatchers": [
      {
        "name": "esbuild-watch",
        "owner": "esbuild",
        "fileLocation": [
          "relative",
          "${workspaceFolder:folderName}"
        ],
        "pattern": {
          "regexp": "^\\s+>\\s+(.*):(\\d+):(\\d+):\\s+(error|warning):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\[watch\\] build started$",
          "endsPattern": "^\\[watch\\] build finished$"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "esbuild": "^0.24.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
